{
  "name": "@veloxts/framework",
  "version": "0.6.89",
  "description": "A full-stack TypeScript framework with type-safe APIs, hybrid tRPC/REST architecture, with great DX",
  "main": "dist/index.js",
  "packageManager": "pnpm@10.28.2",
  "scripts": {
    "build": "turbo build",
    "build:tsc": "tsc --build",
    "build:watch": "tsc --build --watch",
    "dev": "turbo dev",
    "type-check": "turbo type-check",
    "clean": "turbo clean",
    "lint": "biome check .",
    "lint:fix": "biome check --write .",
    "format": "biome format --write .",
    "test": "turbo test",
    "test:coverage": "turbo test:coverage",
    "test:types": "turbo run test:types",
    "test:ecosystem": "pnpm --filter @veloxts/testing test:integration",
    "test:summary": "./scripts/test-summary.sh",
    "smoke": "pnpm packages/create/scripts/smoke-test.sh",
    "changeset": "changeset",
    "version": "changeset version && ./scripts/sync-root-version.sh",
    "release": "turbo build && changeset publish --no-git-tag && ./scripts/push-version-tag.sh",
    "ci:build": "turbo run build --color --no-daemon",
    "ci:test": "turbo run test --color --no-daemon && turbo run test:types",
    "ci:lint": "biome check .",
    "ci:type-check": "turbo run type-check --color --no-daemon",
    "benchmark": "pnpm --filter @veloxts/benchmarks bench",
    "bench:throughput": "pnpm --filter @veloxts/benchmarks bench:throughput",
    "bench:latency": "pnpm --filter @veloxts/benchmarks bench:latency",
    "bench:memory": "pnpm --filter @veloxts/benchmarks bench:memory",
    "bench:startup": "pnpm --filter @veloxts/benchmarks bench:startup",
    "docs:dev": "pnpm --filter @veloxts/docs dev",
    "contract-audit": "./scripts/contract-audit.sh"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/veloxts/velox-ts-framework"
  },
  "license": "MIT",
  "devDependencies": {
    "@biomejs/biome": "2.3.13",
    "@changesets/cli": "2.29.8",
    "@types/node": "25.1.0",
    "dts-bundle-generator": "9.5.1",
    "tsd": "0.33.0",
    "turbo": "2.8.1",
    "typescript": "5.9.3"
  },
  "private": true,
  "pnpm": {
    "onlyBuiltDependencies": [
      "@biomejs/biome",
      "@prisma/engines",
      "prisma"
    ],
    "overrides": {
      "h3": ">=1.15.5",
      "qs": ">=6.14.1",
      "hono": ">=4.11.7",
      "tar": ">=7.5.7",
      "tar-fs": ">=2.1.4",
      "prismjs": ">=1.30.0",
      "lodash": ">=4.17.23",
      "fast-xml-parser": ">=5.3.4",
      "nodemailer": ">=7.0.13"
    }
  }
}
