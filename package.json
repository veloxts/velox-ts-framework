{
  "name": "@veloxts/framework",
  "version": "0.1.0",
  "description": "A full-stack TypeScript framework with type-safe APIs, hybrid tRPC/REST architecture, with great DX",
  "main": "dist/index.js",
  "packageManager": "pnpm@10.24.0",
  "scripts": {
    "build": "turbo build",
    "build:tsc": "tsc --build",
    "build:watch": "tsc --build --watch",
    "dev": "turbo dev",
    "type-check": "turbo type-check",
    "clean": "turbo clean",
    "lint": "biome check .",
    "lint:fix": "biome check --write .",
    "format": "biome format --write .",
    "test": "turbo test",
    "changeset": "changeset",
    "version": "changeset version",
    "release": "turbo build && changeset publish",
    "ci:build": "turbo run build --color --no-daemon",
    "ci:test": "turbo run test --color --no-daemon",
    "ci:lint": "turbo run lint --color --no-daemon",
    "ci:type-check": "turbo run type-check --color --no-daemon"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/veloxts/velox-ts-framework"
  },
  "license": "MIT",
  "devDependencies": {
    "@biomejs/biome": "2.3.8",
    "@changesets/cli": "2.29.8",
    "@types/node": "24.10.1",
    "turbo": "2.6.1",
    "typescript": "5.9.3"
  },
  "private": true
}
