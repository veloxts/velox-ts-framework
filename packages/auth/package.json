{
  "name": "@veloxts/auth",
  "version": "0.3.4",
  "description": "Authentication and authorization system for VeloxTS framework",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./adapters": {
      "types": "./dist/adapters/index.d.ts",
      "import": "./dist/adapters/index.js"
    },
    "./adapters/better-auth": {
      "types": "./dist/adapters/better-auth.d.ts",
      "import": "./dist/adapters/better-auth.js"
    }
  },
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "type-check": "tsc --noEmit",
    "clean": "rm -rf dist tsconfig.tsbuildinfo",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "dependencies": {
    "@veloxts/core": "workspace:*",
    "@veloxts/router": "workspace:*",
    "fastify": "5.6.2"
  },
  "peerDependencies": {
    "bcrypt": ">=5.0.0",
    "argon2": ">=0.30.0",
    "better-auth": ">=1.0.0"
  },
  "peerDependenciesMeta": {
    "bcrypt": {
      "optional": true
    },
    "argon2": {
      "optional": true
    },
    "better-auth": {
      "optional": true
    }
  },
  "devDependencies": {
    "@types/bcrypt": "5.0.2",
    "typescript": "5.9.3",
    "vitest": "3.1.4"
  },
  "keywords": [
    "velox",
    "auth",
    "authentication",
    "authorization",
    "jwt",
    "guards",
    "policies",
    "typescript"
  ],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/veloxts/velox-ts-framework",
    "directory": "packages/auth"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "publishConfig": {
    "access": "public"
  }
}
