{
  "name": "@veloxts/auth",
  "version": "0.6.26",
  "description": "Authentication and authorization system for VeloxTS framework",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./adapters": {
      "types": "./dist/adapters/index.d.ts",
      "import": "./dist/adapters/index.js"
    },
    "./adapters/better-auth": {
      "types": "./dist/adapters/better-auth.d.ts",
      "import": "./dist/adapters/better-auth.js"
    },
    "./guards": {
      "types": "./dist/guards.d.ts",
      "import": "./dist/guards.js"
    },
    "./session": {
      "types": "./dist/session.d.ts",
      "import": "./dist/session.js"
    },
    "./csrf": {
      "types": "./dist/csrf.d.ts",
      "import": "./dist/csrf.js"
    }
  },
  "files": [
    "dist",
    "README.md",
    "GUIDE.md",
    "LICENSE",
    "CHANGELOG.md"
  ],
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "type-check": "tsc --noEmit",
    "test:types": "tsd",
    "clean": "rm -rf dist tsconfig.tsbuildinfo",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage"
  },
  "tsd": {
    "directory": "src/__type-tests__",
    "compilerOptions": {
      "paths": {
        "@veloxts/core": [
          "../core/dist"
        ],
        "@veloxts/router": [
          "../router/dist"
        ],
        "@veloxts/auth": [
          "dist"
        ]
      }
    }
  },
  "dependencies": {
    "@fastify/cookie": "11.0.2",
    "@veloxts/core": "workspace:*",
    "@veloxts/router": "workspace:*",
    "fastify": "5.6.2"
  },
  "peerDependencies": {
    "argon2": ">=0.30.0",
    "bcrypt": ">=5.0.0",
    "better-auth": ">=1.0.0"
  },
  "peerDependenciesMeta": {
    "bcrypt": {
      "optional": true
    },
    "argon2": {
      "optional": true
    },
    "better-auth": {
      "optional": true
    }
  },
  "devDependencies": {
    "@types/bcrypt": "6.0.0",
    "@veloxts/testing": "workspace:*",
    "@veloxts/validation": "workspace:*",
    "@vitest/coverage-v8": "4.0.16",
    "fastify-plugin": "5.1.0",
    "typescript": "5.9.3",
    "vitest": "4.0.16"
  },
  "keywords": [
    "velox",
    "auth",
    "authentication",
    "authorization",
    "jwt",
    "guards",
    "policies",
    "typescript"
  ],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/veloxts/velox-ts-framework",
    "directory": "packages/auth"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "publishConfig": {
    "access": "public"
  }
}
