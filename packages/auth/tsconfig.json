{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "../../tooling/tsconfig/node.json",
  "compilerOptions": {
    "composite": true,
    "rootDir": "./src",
    "outDir": "./dist"
  },
  "references": [
    {
      "path": "../core"
    },
    {
      "path": "../router"
    },
    {
      "path": "../orm"
    }
  ],
  "include": ["src/**/*"],
  "exclude": [
    "node_modules",
    "dist",
    "**/*.test.ts",
    "**/*.spec.ts",
    "**/*.test-d.ts",
    "**/__type-tests__/**"
  ]
}
