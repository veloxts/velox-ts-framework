{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "../../tooling/tsconfig/node.json",
  "compilerOptions": {
    "composite": true,
    "rootDir": "./src",
    "outDir": "./dist",
    "jsx": "react-jsx",
    "jsxImportSource": "react",
    "lib": ["ESNext", "DOM", "DOM.Iterable"]
  },
  "include": ["src/**/*"],
  "exclude": [
    "node_modules",
    "dist",
    "templates",
    "**/*.test.ts",
    "**/*.spec.ts",
    "**/*.test.tsx",
    "**/*.spec.tsx",
    "**/*.test-d.ts",
    "**/__type-tests__/**"
  ]
}
