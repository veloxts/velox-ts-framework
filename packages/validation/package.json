{
  "name": "@veloxts/validation",
  "version": "0.5.0",
  "description": "Zod integration and validation middleware for VeloxTS framework",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "type-check": "tsc --noEmit",
    "test:types": "tsd",
    "clean": "rm -rf dist tsconfig.tsbuildinfo",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage"
  },
  "tsd": {
    "directory": "src/__type-tests__",
    "compilerOptions": {
      "paths": {
        "@veloxts/validation": [
          "dist"
        ]
      }
    }
  },
  "dependencies": {
    "@veloxts/core": "workspace:*",
    "zod": "3.25.76"
  },
  "devDependencies": {
    "@vitest/coverage-v8": "4.0.15",
    "typescript": "5.9.3",
    "vitest": "4.0.15"
  },
  "peerDependencies": {
    "zod": "^3.25.0"
  },
  "peerDependenciesMeta": {
    "zod": {
      "optional": false
    }
  },
  "files": [
    "dist",
    "README.md"
  ],
  "keywords": [
    "velox",
    "validation",
    "zod",
    "schema",
    "typescript"
  ],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/veloxts/velox-ts-framework",
    "directory": "packages/validation"
  },
  "publishConfig": {
    "access": "public"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
