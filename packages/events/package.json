{
  "name": "@veloxts/events",
  "version": "0.6.98",
  "description": "Real-time event broadcasting for VeloxTS framework",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./drivers/ws": {
      "types": "./dist/drivers/ws.d.ts",
      "import": "./dist/drivers/ws.js"
    },
    "./drivers/sse": {
      "types": "./dist/drivers/sse.d.ts",
      "import": "./dist/drivers/sse.js"
    }
  },
  "files": [
    "dist",
    "README.md",
    "GUIDE.md"
  ],
  "scripts": {
    "build": "tsc",
    "type-check": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage"
  },
  "dependencies": {
    "@veloxts/core": "workspace:*",
    "fastify-plugin": "5.1.0",
    "superjson": "2.2.6",
    "ws": "8.19.0",
    "zod": "3.25.76"
  },
  "peerDependencies": {
    "fastify": "^5.0.0",
    "ioredis": ">=5.0.0"
  },
  "peerDependenciesMeta": {
    "ioredis": {
      "optional": true
    }
  },
  "devDependencies": {
    "@types/node": "25.1.0",
    "@types/ws": "8.18.1",
    "@veloxts/testing": "workspace:*",
    "@vitest/coverage-v8": "4.0.18",
    "fastify": "5.7.2",
    "ioredis": "5.9.2",
    "typescript": "5.9.3",
    "vitest": "4.0.18"
  },
  "publishConfig": {
    "access": "public"
  },
  "homepage": "https://veloxts.dev/",
  "repository": {
    "type": "git",
    "url": "https://github.com/veloxts/velox-ts-framework.git",
    "directory": "packages/events"
  },
  "keywords": [
    "veloxts",
    "events",
    "websocket",
    "sse",
    "realtime",
    "broadcasting",
    "pubsub"
  ],
  "author": "VeloxTS Team",
  "license": "MIT",
  "engines": {
    "node": ">=20.0.0"
  }
}
