{
  "name": "@veloxts/core",
  "version": "0.4.6",
  "description": "Fastify wrapper, DI container, and plugin system for VeloxTS framework",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "type-check": "tsc --noEmit",
    "test:types": "tsd",
    "clean": "rm -rf dist tsconfig.tsbuildinfo",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage"
  },
  "tsd": {
    "directory": "src/__type-tests__",
    "compilerOptions": {
      "paths": {
        "@veloxts/core": [
          "dist"
        ]
      }
    }
  },
  "dependencies": {
    "fastify": "5.6.2",
    "fastify-plugin": "5.1.0",
    "picocolors": "1.1.1",
    "reflect-metadata": "0.2.2"
  },
  "devDependencies": {
    "@types/node": "25.0.0",
    "@vitest/coverage-v8": "4.0.15",
    "typescript": "5.9.3",
    "vitest": "4.0.15"
  },
  "keywords": [
    "velox",
    "fastify",
    "typescript",
    "framework"
  ],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/veloxts/velox-ts-framework",
    "directory": "packages/core"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "publishConfig": {
    "access": "public"
  }
}
