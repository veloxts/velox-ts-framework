// Prisma Schema
//
// This schema defines the database structure with authentication support.

generator client {
  provider = "prisma-client-js"
  // Generate to root node_modules for workspace compatibility
  output   = "../../../node_modules/.prisma/client"
}

datasource db {
  provider = "__DATABASE_PROVIDER__"
}

// ============================================================================
// User Model
// ============================================================================

/// User model with authentication support
model User {
  id        String   @id @default(uuid())
  name      String
  email     String   @unique
  password  String?  // Hashed password (optional for social auth)
  roles     String   @default("[\"user\"]") // JSON array of roles
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("users")
}
