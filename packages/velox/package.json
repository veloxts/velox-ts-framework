{
  "name": "@veloxts/velox",
  "version": "0.6.90",
  "description": "Complete VeloxTS framework - batteries included",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./core": {
      "types": "./dist/core.d.ts",
      "import": "./dist/core.js"
    },
    "./validation": {
      "types": "./dist/validation.d.ts",
      "import": "./dist/validation.js"
    },
    "./orm": {
      "types": "./dist/orm.d.ts",
      "import": "./dist/orm.js"
    },
    "./router": {
      "types": "./dist/router.d.ts",
      "import": "./dist/router.js"
    },
    "./auth": {
      "types": "./dist/auth.d.ts",
      "import": "./dist/auth.js"
    }
  },
  "files": [
    "dist",
    "README.md",
    "GUIDE.md",
    "LICENSE",
    "CHANGELOG.md"
  ],
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "type-check": "tsc --noEmit",
    "clean": "rm -rf dist tsconfig.tsbuildinfo",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage"
  },
  "dependencies": {
    "@veloxts/core": "workspace:*",
    "@veloxts/validation": "workspace:*",
    "@veloxts/orm": "workspace:*",
    "@veloxts/router": "workspace:*",
    "@veloxts/auth": "workspace:*"
  },
  "devDependencies": {
    "@veloxts/cache": "workspace:*",
    "@veloxts/events": "workspace:*",
    "@veloxts/mail": "workspace:*",
    "@veloxts/queue": "workspace:*",
    "@veloxts/scheduler": "workspace:*",
    "@veloxts/storage": "workspace:*",
    "typescript": "5.9.3",
    "vitest": "4.0.18"
  },
  "peerDependencies": {
    "zod": "3.25.0",
    "@veloxts/cache": "workspace:*",
    "@veloxts/queue": "workspace:*",
    "@veloxts/mail": "workspace:*",
    "@veloxts/storage": "workspace:*",
    "@veloxts/events": "workspace:*",
    "@veloxts/scheduler": "workspace:*"
  },
  "peerDependenciesMeta": {
    "@veloxts/cache": {
      "optional": true
    },
    "@veloxts/queue": {
      "optional": true
    },
    "@veloxts/mail": {
      "optional": true
    },
    "@veloxts/storage": {
      "optional": true
    },
    "@veloxts/events": {
      "optional": true
    },
    "@veloxts/scheduler": {
      "optional": true
    }
  },
  "keywords": [
    "velox",
    "veloxts",
    "framework",
    "typescript",
    "fullstack",
    "fastify",
    "trpc"
  ],
  "license": "MIT",
  "homepage": "https://veloxts.dev/",
  "repository": {
    "type": "git",
    "url": "https://github.com/veloxts/velox-ts-framework",
    "directory": "packages/velox"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "publishConfig": {
    "access": "public"
  }
}
