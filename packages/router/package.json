{
  "name": "@veloxts/router",
  "version": "0.4.21",
  "description": "Procedure definitions with tRPC and REST routing for VeloxTS framework",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "type-check": "tsc --noEmit",
    "test:types": "tsd",
    "clean": "rm -rf dist tsconfig.tsbuildinfo",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage"
  },
  "tsd": {
    "directory": "src/__type-tests__",
    "compilerOptions": {
      "paths": {
        "@veloxts/core": [
          "../core/dist"
        ],
        "@veloxts/router": [
          "dist"
        ]
      }
    }
  },
  "dependencies": {
    "@trpc/server": "11.7.2",
    "@veloxts/core": "workspace:*",
    "@veloxts/validation": "workspace:*",
    "fastify": "5.6.2"
  },
  "devDependencies": {
    "@vitest/coverage-v8": "4.0.15",
    "typescript": "5.9.3",
    "vitest": "4.0.15",
    "zod": "3.24.4"
  },
  "peerDependencies": {
    "fastify": "^5.0.0",
    "zod": "^3.24.0"
  },
  "peerDependenciesMeta": {
    "zod": {
      "optional": false
    }
  },
  "files": [
    "dist",
    "README.md"
  ],
  "keywords": [
    "velox",
    "router",
    "trpc",
    "rest",
    "procedures",
    "typescript"
  ],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/veloxts/velox-ts-framework",
    "directory": "packages/router"
  },
  "publishConfig": {
    "access": "public"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
