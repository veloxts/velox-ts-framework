{
  "name": "@veloxts/mail",
  "version": "0.6.97",
  "description": "Email templating and sending for VeloxTS framework",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./utils": {
      "types": "./dist/utils.d.ts",
      "import": "./dist/utils.js"
    }
  },
  "files": [
    "dist",
    "README.md",
    "GUIDE.md"
  ],
  "scripts": {
    "build": "tsc",
    "type-check": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "lint": "biome lint src",
    "lint:fix": "biome lint --write src"
  },
  "dependencies": {
    "@react-email/components": "1.0.6",
    "@react-email/render": "2.0.4",
    "@veloxts/core": "workspace:*",
    "fastify-plugin": "5.1.0",
    "nodemailer": "7.0.13",
    "resend": "6.9.1",
    "zod": "3.25.76"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.13",
    "@types/node": "25.1.0",
    "@types/nodemailer": "7.0.9",
    "@types/react": "19.2.10",
    "@veloxts/testing": "workspace:*",
    "@vitest/coverage-v8": "4.0.18",
    "fastify": "5.7.2",
    "react": "19.2.4",
    "typescript": "5.9.3",
    "vitest": "4.0.18"
  },
  "peerDependencies": {
    "fastify": "^5.0.0",
    "react": "^19.2.0"
  },
  "publishConfig": {
    "access": "public"
  },
  "homepage": "https://veloxts.dev/",
  "repository": {
    "type": "git",
    "url": "https://github.com/veloxts/velox-ts-framework.git",
    "directory": "packages/mail"
  },
  "keywords": [
    "veloxts",
    "mail",
    "email",
    "react-email",
    "smtp",
    "resend",
    "nodemailer"
  ],
  "author": "VeloxTS Team",
  "license": "MIT"
}
