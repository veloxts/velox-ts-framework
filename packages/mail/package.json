{
  "name": "@veloxts/mail",
  "version": "0.6.77",
  "description": "Email templating and sending for VeloxTS framework",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./utils": {
      "types": "./dist/utils.d.ts",
      "import": "./dist/utils.js"
    }
  },
  "files": [
    "dist",
    "README.md",
    "GUIDE.md"
  ],
  "scripts": {
    "build": "tsc",
    "type-check": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "lint": "biome lint src",
    "lint:fix": "biome lint --write src"
  },
  "dependencies": {
    "@react-email/components": "0.0.31",
    "@react-email/render": "1.0.4",
    "@veloxts/core": "workspace:*",
    "fastify-plugin": "5.1.0",
    "nodemailer": "6.10.1",
    "resend": "4.1.2",
    "zod": "3.24.4"
  },
  "devDependencies": {
    "@biomejs/biome": "2.0.0",
    "@types/node": "22.15.29",
    "@types/nodemailer": "6.4.17",
    "@types/react": "19.2.7",
    "@veloxts/testing": "workspace:*",
    "@vitest/coverage-v8": "4.0.16",
    "fastify": "5.6.2",
    "react": "19.2.3",
    "typescript": "5.8.3",
    "vitest": "4.0.16"
  },
  "peerDependencies": {
    "fastify": "^5.0.0",
    "react": "^19.2.0"
  },
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/veloxts/velox-ts-framework.git",
    "directory": "packages/mail"
  },
  "keywords": [
    "veloxts",
    "mail",
    "email",
    "react-email",
    "smtp",
    "resend",
    "nodemailer"
  ],
  "author": "VeloxTS Team",
  "license": "MIT"
}
