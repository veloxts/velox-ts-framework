{
  "name": "@veloxts/testing",
  "version": "0.6.87",
  "private": true,
  "description": "Internal testing utilities for VeloxTS framework packages",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "type-check": "tsc --noEmit",
    "test": "vitest run",
    "test:integration": "vitest run --testTimeout=120000",
    "clean": "rm -rf dist tsconfig.tsbuildinfo"
  },
  "dependencies": {
    "@veloxts/core": "workspace:*",
    "fastify": "5.6.2",
    "fastify-plugin": "5.1.0",
    "testcontainers": "10.7.2"
  },
  "devDependencies": {
    "@aws-sdk/client-s3": "3.782.0",
    "@types/node": "25.0.3",
    "@types/nodemailer": "6.4.17",
    "@types/pg": "8.11.14",
    "nodemailer": "6.10.1",
    "pg": "8.14.1",
    "redis": "4.7.0",
    "typescript": "5.9.3",
    "vitest": "3.0.4"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
