{
  "name": "@veloxts/testing",
  "version": "0.6.89",
  "private": true,
  "description": "Internal testing utilities for VeloxTS framework packages",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "type-check": "tsc --noEmit",
    "test": "vitest run --passWithNoTests",
    "test:integration": "vitest run --config vitest.integration.config.ts",
    "clean": "rm -rf dist tsconfig.tsbuildinfo"
  },
  "dependencies": {
    "@veloxts/core": "workspace:*",
    "fastify": "5.7.2",
    "fastify-plugin": "5.1.0",
    "testcontainers": "11.11.0"
  },
  "devDependencies": {
    "@aws-sdk/client-s3": "3.980.0",
    "@types/node": "25.1.0",
    "@types/nodemailer": "7.0.9",
    "@types/pg": "8.16.0",
    "nodemailer": "7.0.13",
    "pg": "8.18.0",
    "redis": "5.10.0",
    "typescript": "5.9.3",
    "vitest": "4.0.18"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
