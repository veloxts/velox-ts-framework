{
  "name": "@veloxts/testing",
  "version": "0.6.67",
  "private": true,
  "description": "Internal testing utilities for VeloxTS framework packages",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "type-check": "tsc --noEmit",
    "clean": "rm -rf dist tsconfig.tsbuildinfo"
  },
  "dependencies": {
    "@veloxts/core": "workspace:*",
    "fastify": "5.6.2",
    "fastify-plugin": "5.1.0",
    "testcontainers": "10.7.2"
  },
  "devDependencies": {
    "@types/node": "25.0.3",
    "typescript": "5.9.3"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
